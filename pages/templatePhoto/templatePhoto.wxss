@import "../template/template.wxss";
page{
  background: #e6e8f5;
}
.container{
  padding-bottom: 100rpx;
}
.grouplist_item {
  width: 90%;
  margin: 60rpx auto;
  border-radius: 20rpx;
}

.mengcen {
  position: absolute;
  width: 100%;
  height: 302rpx;
  background: rgba(0, 0, 0, 0.2);
  top: 0;
  bottom: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.makeTopBox {
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  right: 10rpx;
  bottom: 4rpx;
  z-index: 88;
}

.makeTopBox image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.groupname {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.info {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.mustRead {
  text-align: center;
  display: block;
  width: 144rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 1px;
  color: rgb(51, 51, 51);
  font-size: 22rpx;
  background: #fff175;
}

.member {
  display: flex;
}

.member, .picture {
  display: flex;
  justify-content: center;
}

.i-memberNum, .i-pictureNum {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  background: red;
}

.groupdes {
  font-size: 22rpx;
  line-height: 22rpx;
  color: #fff;
  margin-top: 12rpx;
}

.i-text {
  font-size: 24rpx;
  line-height: 24rpx;
}

.line {
  display: block;
  background: #fff;
  width: 1px;
  height: 54rpx;
}

.navter {
  padding: 0;
  margin: 0;
  position: relative;
}
.navter image{
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}
.grouplist_item navigator{
  position: relative;
  margin-bottom: 40rpx;
}
.navter .title{
  color: #fff;
  position: absolute;
  border-radius: 20rpx;
  top: 0;
  left: 0;
  width: 100%;
  height: 98%;
  background: rgba(0, 0, 0, .2);
  text-align: center;
}
.navter .title view.friends{
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
  width: 100%;
}
.navter .title view image{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  display: block;
  margin: 0 auto;
}